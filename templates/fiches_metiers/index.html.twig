{% extends 'base.html.twig' %}

{% block title %}Hello FichesMetiersController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Fiches metiers</h1>
    <nav class="navbar navbar-light bg-light">

    </nav>

    <br class="row">
    {% for fichemetier in fichesmetiers %}

        <div class="card">
            <div class="card-body">
                <a href="{{ path('app_fichesmetiers', {'id': fichemetier.id}) }}" class="text-dark font-weight-bold text-decoration-none"><h4 class="card-title">{{ fichemetier.libelle }}</h4></a>
                <p class="card-text">{{ fichemetier.description }}</p>
            </div>
        </div>
        </br>

        </div>
    {% endfor %}
{% endblock %}
