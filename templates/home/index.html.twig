{% extends 'base.html.twig' %}
{% block title %}Offres d'emplois{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
        <h1>Offres d'emplois</h1>
        <nav class="navbar navbar-light bg-light">
            <form class="form-inline" method="GET" action="{{ path('app_search') }}">
                    {{ form_start(form) }}
                    {{ form_end(form) }}  
            </form>
        </nav>
    </div>

    {% if message is defined and message is not null %}
        <div class="alert alert-warning">{{ message }}</div>
    {% endif %}

    <br class="row">
    {% for offre in offres %}

        <div class="card">
            <div class="card-body">
                <a href="{{ path('app_offre_detail', {'id': offre.id}) }}" class="text-dark font-weight-bold text-decoration-none"><h4 class="card-title">{{ offre.libelle }}</h4></a>
                <h5 class="card-title">{{ offre.localisation }}</h5>
                <h6 class="card-title mb-2 text-muted">{{ offre.reference }}</h6>
                <p class="card-text">Age demand√©: Entre {{ offre.agemin }} et {{ offre.ageMax }} ans</p>
                <p class="card-text">{{ offre.description }}</p>
                <p class="card-text">Du {{ offre.dateDeb.format("d/m/Y") }} au {{ offre.dateFin.format("d/m/Y") }}</p>
                <a href="#" class="btn btn-primary" href="{{ path('app_offre_detail', {'id': offre.id}) }}">Voir plus</a>
            </div>
        </div>
    </br>


    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {{ knp_pagination_render(offres) }}
            </div>
        </div>
    </div>

</div>

    </tbody>
        </table>


    </ul>
</div>
{% endblock %}
