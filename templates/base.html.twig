<!DOCTYPE html>
<html>
    <head>

        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link href={{ asset('/build/app.css') }} rel="stylesheet">
        {% endblock %}

        {% block javascripts %}

        {% endblock %}
        <!-- Matomo -->
        <script>
        var _paq = window._paq = window._paq || [];
        /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
        _paq.push(['trackPageView']);
        _paq.push(['enableLinkTracking']);
        (function() {
            var u="//matomo.test/";
            _paq.push(['setTrackerUrl', u+'matomo.php']);
            _paq.push(['setSiteId', '1']);
            var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
            g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
        })();
        </script>
        <!-- End Matomo Code -->


    </head>




    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex">
        <a class="navbar-brand" href="">MegaCasting</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ asset('/offrecasting/') }} ">Offres d'emplois</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ asset('/fichesmetiers/') }} ">Fiches Metiers</a>
                </li>
                {% if app.user %}
                        <li class="nav-item disabled">
                            <a class="nav-link disabled" href="#">Se connecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ asset('/login/') }}">Se connecter</a>
                        </li>
                    {% endif %}
                {% if app.user %}
                    <li class="nav-item disabled">
                        <a class="nav-link" href="{{ asset('/user/') }}">Profil</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Profil</a>
                    </li>
                {% endif %}



            </ul>
            <form class="form-inline d-flex">
                <div class="form-group mx-sm-3 mb-2">
                    <input class="form-control mr-sm-2" type="search" placeholder="Recherche" aria-label="Recherche">
                </div>
                <button class="btn btn-outline-success mb-2" type="submit">Rechercher</button>
            </form>
        </div>
    </nav>
    {% block body %}
    {% endblock %}
    </body>
</html>
