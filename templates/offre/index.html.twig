{% extends 'base.html.twig' %}

{% block title %}Hello OffreController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <table>
            <thead>
            <tr>
                <th>Libellé</th>
                <th>Référence</th>
                <th>Localisation</th>
            </tr>
            </thead>
            <tbody>
            {% for offre in offres %}
                <tr>
                    <td>{{ offre.libelle }}</td>
                    <td>{{ offre.reference }}</td>
                    <td>{{ offre.localisation }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <li>Your controller at <code><a href="{{ '/srv/app/src/Controller/OffreController.php'|file_link(0) }}">src/Controller/OffreController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/srv/app/templates/offre/index.html.twig'|file_link(0) }}">templates/offre/index.html.twig</a></code></li>
    </ul>
</div>
{% endblock %}
